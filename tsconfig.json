{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components*": ["components*"],
      "@services*": ["services*"],
      "@contexts*": ["contexts*"],
      "@models*": ["models*"],
      "@hooks*": ["hooks*"],
      "@api*": ["pages/api*"],
      "@providers*": ["providers*"],
      "@libraries*": ["libraries*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "./src/types/assets.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/_document.tsx",
    "src"
  ]
}
